{
    "extends": "eslint-config-nfl",
    "settings": {
        "import/ignore": [
            "jspm_packages",
            "node_modules",
            ".(scss|less|css)$",
            ".[^js(x)?]+$"
        ],
        "import/parser": "babel-eslint",
        "import/resolve": {
            "moduleDirectory": [
                "jspm_packages",
                "node_modules",
                "."
            ]
        },
        "import/resolver": {
            "jspm": {
                "moduleDirectory": "jspm_packages"
            },
            "node": true
        }
    },
    "rules": {
        "max-nested-callbacks": 0
    }
}
